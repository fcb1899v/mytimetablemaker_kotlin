<?xml version="1.0" encoding="utf-8"?>
<!-- Settings fragment layout - App configuration interface -->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SettingsFragment">

    <!-- Scrollable settings container -->
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <!-- Main settings layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">

            <!-- Settings content container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Route 2 display settings header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Route 2 display title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/displayRoute2Title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Back route 2 switch setting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Back route 2 setting label -->
                    <TextView
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="@string/back2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Back route 2 toggle switch -->
                    <Switch
                        android:id="@+id/back2switch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="0"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>

                <!-- Go route 2 switch setting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Go route 2 setting label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="@string/go2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Go route 2 toggle switch -->
                    <Switch
                        android:id="@+id/go2switch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="0"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>
            </LinearLayout>

            <!-- Change line settings section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Change line settings header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Change line settings title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/settingsChangeLineTitle"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Back 1 change line setting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="InefficientWeight">

                    <!-- Back 1 change line label -->
                    <TextView
                        android:id="@+id/back1ChangeLineButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="@string/back1Route"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights" />

                    <!-- Back 1 change line value display -->
                    <TextView
                        android:id="@+id/back1ChangeLineText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/notSet"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Back 2 change line setting -->
                <LinearLayout
                    android:id="@+id/back2ChangeLineLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Back 2 change line label -->
                    <TextView
                        android:id="@+id/back2ChangeLineButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="@string/back2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Back 2 change line value display -->
                    <TextView
                        android:id="@+id/back2ChangeLineText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/notSet"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Go 2 change line setting -->
                <LinearLayout
                    android:id="@+id/go2ChangeLineLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Go 2 change line label -->
                    <TextView
                        android:id="@+id/go2ChangeLineButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="@string/go2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Go 2 change line value display -->
                    <TextView
                        android:id="@+id/go2ChangeLineText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/notSet"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Go 1 change line setting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Go 1 change line label -->
                    <TextView
                        android:id="@+id/go1ChangeLineButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="@string/go1Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Go 1 change line value display -->
                    <TextView
                        android:id="@+id/go1ChangeLineText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/notSet"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Various settings section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Various settings header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Various settings title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/variousSettings"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Back 1 settings button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Back 1 settings label -->
                    <TextView
                        android:id="@+id/back1SettingButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/back1Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Go 1 settings button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Go 1 settings label -->
                    <TextView
                        android:id="@+id/go1SettingButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/go1Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Back 2 settings button -->
                <LinearLayout
                    android:id="@+id/back2SettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Back 2 settings label -->
                    <TextView
                        android:id="@+id/back2SettingButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/back2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Go 2 settings button -->
                <LinearLayout
                    android:id="@+id/go2SettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Go 2 settings label -->
                    <TextView
                        android:id="@+id/go2SettingButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/go2Route"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Account settings section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Account settings header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Account settings title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/account"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Save data button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Save data label -->
                    <TextView
                        android:id="@+id/saveServerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/save_current_data"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Get data button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Get data label -->
                    <TextView
                        android:id="@+id/getServerDataButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/get_saved_data"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Sign out button -->
                <LinearLayout
                    android:id="@+id/signOutLayOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Sign out label -->
                    <TextView
                        android:id="@+id/signOutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/logout"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Delete account button -->
                <LinearLayout
                    android:id="@+id/deleteAccountLayOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Delete account label -->
                    <TextView
                        android:id="@+id/deleteAccountButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/delete_your_account"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- About section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- About settings header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- About settings title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Version information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="InefficientWeight">

                    <!-- Version label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="@string/version"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights" />

                    <!-- Version number display -->
                    <TextView
                        android:id="@+id/versionNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Privacy policy button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.3dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Privacy policy label -->
                    <TextView
                        android:id="@+id/privacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/privacyPolicy"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Progress indicator overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Loading progress bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:indeterminate="true"
            android:indeterminateTintMode="src_in"
            android:indeterminateTint="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>